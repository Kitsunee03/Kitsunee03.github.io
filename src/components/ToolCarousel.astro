---
import { Icon } from "astro-icon/components";
import { TOOLS } from "@/data/tools";

// Duplicate tools array for seamless infinite scroll
const duplicatedTools = [...TOOLS, ...TOOLS];
---

<div class="w-full overflow-hidden py-8 carousel-mask">
  <div class="flex animate-scroll-left w-max gap-8">
    {duplicatedTools.map((tool) => (
      <div class="flex flex-col items-center gap-2 min-w-[100px] group transition-transform duration-200 hover:scale-110">
        <div class="w-14 h-14 grid place-items-center rounded-lg bg-[var(--bg-card)] border border-[var(--border-color)] group-hover:border-[var(--border-hover)] transition-all duration-200">
          <Icon name={tool.icon} class="w-8 h-8" style={tool.color ? `color: ${tool.color}` : ""} />
        </div>
        <span class="text-xs text-[var(--text-muted)] group-hover:text-[var(--text-secondary)] transition-colors whitespace-nowrap">
          {tool.name}
        </span>
      </div>
    ))}
  </div>
</div>
