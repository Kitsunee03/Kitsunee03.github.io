---
import { EMAIL } from "@/consts";
import SocialLinks from "./SocialLinks.astro";
import { Icon } from "astro-icon/components";

type Props = {
  compact?: boolean;
};

const { compact = false } = Astro.props;
---

<div class={`w-full grid place-items-center ${compact ? "py-4" : "py-10"}`}>
  <div class={`text-center ${compact ? "space-y-3" : "space-y-6"}`}>
    {!compact && (
      <h3 class="text-2xl md:text-3xl text-[var(--text-secondary)]">
        &lt;Get In Touch /&gt;
      </h3>
    )}
    <p class="text-[var(--text-muted)] max-w-md mx-auto">
      Interested in working together? Feel free to reach out.
    </p>
    <a
      href={`mailto:${EMAIL}`}
      class="inline-flex items-center gap-3 border border-[var(--border-color)] hover:border-white px-6 py-3 transition-all hover:bg-white hover:text-black group rounded-lg"
    >
      <Icon name="mdi:email-outline" class="w-5 h-5" />
      <span>{EMAIL}</span>
    </a>
    <div class="pt-2">
      <SocialLinks size="w-5 h-5" className="justify-center" />
    </div>
  </div>
</div>
